<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Admin Home</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="../../index.html">
                                <i class="fas fa-home"></i> White Rabbit</a>
                        </li>
                        <li class="breadcrumb-item active">Add User</li>
                    </ul>
                </div>
            </div>
        </div>
        <br>
        <br>

        <section>

            <div class="row clearfix" id="add-us">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                    <div class="card">
                        <div class="header">
                            <h2>
                                <strong>Add</strong> users
                            </h2>
                            <h4 id="msg"></h4>
                        </div>
                        <div class="body" id="subadmin-tdl-status">
                            <div class="table-responsive">
                                <form id="add-user" method="POST"  action="add-user">


                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="fname">First Name</label>
                                            <input type="text" class="form-control" id="fname" name="fname"
                                                placeholder="First Name">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="lname">Last Name</label>
                                            <input type="text" class="form-control" id="lname" name="lname"
                                                placeholder="Last Name">
                                        </div>

                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="phone">Phone</label>
                                            <input type="tel" name="phone" id="phone" class="form-control"
                                                placeholder="Phone" pattern="[7-9]{1}[0-9]{9}">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="inputEmail4">Email</label>
                                            <input type="email" class="form-control" id="email" placeholder="Email"
                                                name="email">
                                        </div>
                                    </div>


                                    <div class="form-row">

                                        <div class="form-group col-md-6">
                                            <label for="Achievements">Achievements</label>
                                            <input type="text" class="form-control" id="Achievements"
                                                placeholder="Achievements" name="Achievements">
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="Introduction">Introduction</label>
                                            <input type="text" class="form-control" id="Introduction"
                                                placeholder="Introduction" name="Introduction">
                                        </div>
                                    </div>


                                    <div class="form-row">

                                        <div class="form-group col-md-4">
                                            <label for="Experience">Experience</label>
                                            <input type="number" class="form-control" id="Experience"
                                                placeholder="Experience" name="Experience"
                                                oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                                type="number" maxlength="10">
                                        </div>


                                    </div>

                                    <button type="submit" id="add-user" class="btn btn-primary">Add User</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>


        <section>


            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                <strong>TDL</strong> Details
                            </h2>
                          
                        </div>
                        <div class="body" id="user-details">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-hover js-basic-example dataTable"
                                    id="user-table">
                                    <thead>
                                        <tr>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each userData}}
                                        <tr>
                                            <td>{{this.fname}}</td>
                                            <td>{{this.lname}}</td>
                                            <td>{{this.email}}</td>
                                            <td>
                                               <form action="/view-user/{{this._id}}" method="post">
                                                    <button class="btn btn-info">View Details</button>
                                               </form>
                                            </td>
                                          

                                        </tr>
                                        {{/each}}

                                        </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>